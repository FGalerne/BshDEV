{% extends 'base.html.twig' %}

{% block body %}

    <section class="row">
        <div class="col-xs-offset-1 col-xs-10 col-md-offset-2 col-md-8 backWhite">
            <div class="row">
                <div class="col-xs-12">
                    <h2>{{ job.title }}</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ job.description | raw }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-offset-3 col-xs-6 col-sm-offset-5 col-sm-2">
                    <a href="{{ path('person_index') }}">
                        <button type="submit" class="button">Revenir</button>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <h1>Job</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ job.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ job.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ job.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('job_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('job_edit', { 'id': job.id }) }}">Edit</a>
        </li>
        <li>
            {# {{ form_start(delete_form) }}
                 <input type="submit" value="Delete">
             {{ form_end(delete_form) }}#}
        </li>
    </ul>
{% endblock %}
