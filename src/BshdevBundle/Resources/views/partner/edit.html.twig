{% extends 'base.html.twig' %}

{% block body %}
        <h1 class="title">Je modifie un partenaire</h1>

        <div class="row block-form">
            <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                {{ form_row(form.alt) }}
                {{ form_row(form.fileLogo, {'attr': {'class': 'border'} }) }}

                <input type="submit" value="Ajouter" class="col-xs-12 button" />

                {{ form_end(form) }}

            </div>
        </div>


    <ul>
        <li>
            <a href="{{ path('partner_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
