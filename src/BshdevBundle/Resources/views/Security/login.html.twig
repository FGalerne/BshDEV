{% extends "@FOSUser/layout.html.twig" %}
 {% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row login">
            <div class="col-md-offset-4 col-md-4">

                <div class="form-group row">
                    <label class="col-xs-offset-1 col-xs-10 col-md-3 col-form-label" for="username">{{ 'security.login.username'|trans }}</label>
                    <div class="col-xs-offset-1 col-xs-10 col-md-9">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xs-offset-1 col-xs-10 col-sm-3 col-form-label" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="col-xs-offset-1 col-xs-10 col-sm-9">
                        <input type="password" id="password" name="_password" required="required" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-8 col-sm-4">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="col-xs-1" />
                        <label for="remember_me" class="col-xs-11">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="col-xs-12 col-sm-8">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="col-xs-offset-4 col-xs-3 button" />
                    </div>
                </div>
            </div>
        </div>
    </form>



    {% endblock fos_user_content %}
