{% extends '::base.html.twig' %}
{% block body %}

    <h2>Nous Contacter</h2>


    <section class="row">
        {% for admin in admins %}
            <div class=" col-xs-12 col-sm-offset-2 col-sm-8">
                <div class="row blockAddressMap">
                    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-3 col-xs-offset-1 backWhite address">
                        <ul class="center-block">
                            <li>{{ admin.firstname }} {{ admin.lastname }}</li>
                            <li>{{ admin.address }}</li>
                            <li>{{ admin.postalCode }} {{ admin.town }}</li>
                            <li>{{ admin.phone }}</li>
                            <li>{{ admin.cellphone }}</li>
                        </ul>
                    </div>
                    <div class=" hidden-xs col-sm-6">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2647.3530443145305!2d1.4725536160162715!3d48.43056357924786!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e40c60133154ff%3A0xe86db8c765a20737!2s96+Avenue+Maurice+Maunoury%2C+28600+Luisant!5e0!3m2!1sfr!2sfr!4v1486713003436" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>

            </div>
            {% if is_granted('ROLE_ADMIN') %}

                <div class="row">
                    <div class="col-xs-12">
                        <a href="{{ path('admin_editContact', {'id' : admin.id}) }}">
                            <button type="submit" class="col-xs-offset-1 col-xs-10 col-md-offset-5 col-md-2 button">Modifier</button>
                        </a>
                    </div>
                </div>

            {% endif %}
        {% endfor %}
    </section>


{% endblock%}