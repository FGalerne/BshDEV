{% extends '::base.html.twig' %}
{% block body %}
    <div id="myCarousel" class="carousel slide carouReferences" data-ride="carousel">

        <ol class="carousel-indicators">
            {%  set isFirst = true %}
            {% for partner in partners %}
                {% if isFirst == true %}
                    <li data-target="#myCarousel" data-slide-to="{{ partner.id }}" class="active"></li>
                {% else %}
                    <li data-target="#myCarousel" data-slide-to="{{ partner.id }}"></li>
                {% endif %}

                {% set isFirst = false %}
            {% endfor %}
        </ol>
        <div class="carousel-inner" role="listbox">
            {%  set isFirst = true %}
            {% for partner in partners %}
            {% if isFirst == true %}
            <div class="item active">
                {% else %}
                <div class="item">

                    {% endif %}
                    <img src="{{ app.request.basepath }}/uploads/{{ partner.imageLogo }}" alt="">
                    <div class="slide-content">
                        <h4>{{ partner.title }}</h4>
                        <p>
                            {{ partner.description }}
                        </p>
                    </div>
                </div>
                {% set isFirst = false %}
                {% endfor %}
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
    </div>



{% endblock%}