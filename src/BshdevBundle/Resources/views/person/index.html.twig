{% extends 'base.html.twig' %}

{% block body %}

<section class="row">
    <h2>Candidature spontanée</h2>
    {% for person in persons %}
        {% if person.job == NULL %}
            <div class="col-xs-offset-1 col-xs-10  backWhite">
                <div class="row">
                    <div class="col-xs-12 col-lg-3 identity">
                        {% if  person.imageIdentity != NULL%}
                        <img src="{{ app.request.basepath }}/uploads/{{ person.imageIdentity }}" alt="{{ person.lastname }} {{ person.firstname }}" class=" img-responsive col-xs-offset-3 col-xs-6 col-lg-offset-3 col-lg-6">
                        {% else %}
                        <img src="{{ asset('bundles/bshdev/img/no_photo.jpg') }}" alt="{{ person.lastname }} {{ person.firstname }}" class=" img-responsive col-xs-offset-3 col-xs-6 col-lg-offset-3 col-lg-6">
                        {% endif %}
                    </div>
                    <div class="col-xs-12 col-lg-8 identityTxt">
                        <ul>
                            <li class="col-lg-3"><b>Nom :</b> {{ person.lastname }}</li>
                            <li class="col-lg-3"><b>Prénom :</b> {{ person.firstname }}</li>
                            <li class="col-lg-12"><b>Adresse:</b> {{ person.address }} {{ person.cp }} {{ person.town }}</li>
                            <li class="col-lg-12"><b>Téléphone:</b> {{ person.phone }}</li>
                            <li class="col-lg-12"><b>Email:</b> {{ person.email }}</li>
                        </ul>
                    </div>
                    <div class="row">
                        <div class="col-xs-12"> <a href="{{ app.request.basepath }}/uploads/{{ person.imageCv }}" download="{{ person.imageCv }}">
                                <button type="submit" class="col-xs-offset-1 col-xs-10 button">Télécharger le CV</button></a>
                        </div>
                    </div>
                </div>

            </div>

        {% endif %}
    {% endfor %}
</section>

