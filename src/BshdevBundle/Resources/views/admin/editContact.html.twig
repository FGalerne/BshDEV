{% extends 'base.html.twig' %}
{% form_theme form 'BshdevBundle:template:form.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
            <h2>Je modifie le contact </h2>

            {{ form_start(form) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.address) }}
            {{ form_row(form.postalCode) }}
            {{ form_row(form.town) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.cellphone) }}

            <a href="{{ path('bshdev_contact') }}"><button type="submit" class=" col-xs-offset-1 col-xs-10  col-offset-md-1 col-md-4 button">Annuler</button></a>

            <input type="submit" value="Je valide ma modification" class="col-xs-offset-1 col-xs-10 col-md-offset-1 col-md-4 button" />
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}